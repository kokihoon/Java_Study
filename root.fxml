<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ToggleGroup?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="RootController"
            prefWidth="420.0" prefHeight="150.0">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>

    <center>
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="400.0" spacing="10">
            <children>
                <VBox prefHeight="100.0" prefWidth="100.0" spacing="20.0" alignment="CENTER_LEFT">
                    <children>
                        <CheckBox fx:id="chk1" text="캐릭터1" onAction="#handleChkAction"/>
                        <CheckBox fx:id="chk2" text="캐릭터1" onAction="#handleChkAction"/>

                    </children>
                </VBox>
                <ImageView fx:id="checkImageView" fitWidth="100.0" preserveRatio="true">
                    <image><Image url="image1.jpeg"/></image>
                </ImageView>

                <Separator orientation="VERTICAL" prefWidth="100.0"/>

                <VBox prefWidth="150" prefHeight="100" spacing="20.0" alignment="CENTER_RIGHT" >
                    <fx:define><ToggleGroup fx:id="group"/></fx:define>
                    <children>
                        <RadioButton fx:id="rad1" text="ground1" userData="image3" toggleGroup="$group"/>
                        <RadioButton fx:id="rad2" text="ground2" userData="image4" toggleGroup="$group"/>
                        <RadioButton fx:id="rad3" text="ground3" userData="image5" toggleGroup="$group"/>


                    </children>
                </VBox>
                <ImageView fx:id="radioImageView" fitWidth="100.0" preserveRatio="true">
                    <image><Image url="image3.jpg"/></image>
                </ImageView>

            </children>
        </HBox>
    </center>
    <bottom>
        <Button fx:id="btnExit" BorderPane.alignment="CENTER" onAction="#handleBtnExitAction">
            <graphic>
                <ImageView><Image url="exit.jpeg"/></ImageView>
            </graphic>
            <BorderPane.margin><Insets top="20.0"/></BorderPane.margin>
        </Button>
    </bottom>
</BorderPane>